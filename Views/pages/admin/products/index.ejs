<div class="admin-section-container">
    <div class="admin-section-header">
        <h1 class="admin-section-title">Gerenciar Produtos</h1>
        <a href="/admin/products/new" class="btn btn-primary">
            <i class="material-icons">add</i>
            <span>Adicionar Novo Produto</span>
        </a>
    </div>

    <div class="admin-content-grid">
        <div class="product-form-section">
            <h2 class="form-title">Adicionar/Editar Produto</h2>
            <form class="admin-form" action="/admin/products" method="POST">
                <!-- Se estiver editando, inclua um campo oculto para o ID e mude a ação do formulário -->
                <!-- <input type="hidden" name="productId" value="<%= product.id %>"> -->
                
                <div class="form-group">
                    <label for="productName">Nome do Produto:</label>
                    <input type="text" id="productName" name="productName" required>
                </div>
                <div class="form-group">
                    <label for="category">Categoria:</label>
                    <input type="text" id="category" name="category" required>
                </div>
                <div class="form-group">
                    <label for="price">Preço:</label>
                    <input type="number" id="price" name="price" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="stock">Estoque:</label>
                    <input type="number" id="stock" name="stock" step="1" required>
                </div>
                <div class="form-group">
                    <label for="description">Descrição:</label>
                    <textarea id="description" name="description" rows="5" required></textarea>
                </div>
                <div class="form-group">
                    <label for="imageUrl">URL da Imagem:</label>
                    <input type="url" id="imageUrl" name="imageUrl">
                </div>
                <button type="submit" class="admin-submit-button btn">Salvar Produto</button>
            </form>
        </div>

        <div class="product-list-section">
            <h2>Lista de Produtos</h2>

            <% if (products && products.length > 0) { %>
                <div class="product-table-responsive">
                    <table class="product-table">
                        <thead>
                            <tr>
                                <th>Produto</th>
                                <th>Preço</th>
                                <th>Estoque</th>
                                <th>Categoria</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                                <tr>
                                    <td><%= product.name %></td>
                                    <td>R$ <%= product.price.toFixed(2) %></td>
                                    <td><%= product.stock %></td>
                                    <td><%= product.category %></td>
                                    <td class="actions-cell">
                                        <a href="/admin/products/edit/<%= product.id %>" class="action-btn edit-btn" title="Editar">
                                            <i class="material-icons">edit</i>
                                        </a>
                                        <form action="/admin/products/delete/<%= product.id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="action-btn delete-btn" title="Excluir" onclick="return confirm('Tem certeza que deseja excluir este produto?');">
                                                <i class="material-icons">delete</i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="material-icons empty-icon">inventory_2</i>
                    <p>Nenhum produto cadastrado ainda.</p>
                    <p>Use o botão "Adicionar Novo Produto" para começar.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>
