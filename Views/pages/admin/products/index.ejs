<div class="admin-section-container">
    <h1 class="admin-section-title">Gerenciar Produtos</h1>

    <div class="admin-content-grid">
        <div class="product-form-section">
            <h2>Adicionar/Editar Produto</h2>
            <form class="admin-form" action="/admin/products" method="POST">
                <div class="form-group">
                    <label for="category">Categoria:</label>
                    <input type="text" id="category" name="category" required>
                </div>
                <div class="form-group">
                    <label for="productName">Nome do Produto:</label>
                    <input type="text" id="productName" name="productName" required>
                </div>
                <div class="form-group">
                    <label for="price">Preço:</label>
                    <input type="number" id="price" name="price" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="description">Descrição:</label>
                    <textarea id="description" name="description" rows="5" required></textarea>
                </div>
                <div class="form-group">
                    <label for="imageUrl">URL da Imagem:</label>
                    <input type="url" id="imageUrl" name="imageUrl">
                </div>
                <button type="submit" class="admin-submit-button btn">Salvar Produto</button>
            </form>
        </div>

        <div class="product-list-section">
            <h2>Lista de Produtos</h2>
            <p>Nenhum produto cadastrado ainda.</p>
            <!-- Placeholder for product list/table -->
            <div class="product-table-responsive">
                <table class="product-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Preço</th>
                            <th>Categoria</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Example Product Row (placeholder) -->
                        <tr>
                            <td>1</td>
                            <td>Sofá Rústico</td>
                            <td>R$ 2.500,00</td>
                            <td>Salas de Estar</td>
                            <td>
                                <button class="action-btn btn edit-btn"><i class="material-icons">edit</i></button>
                                <button class="action-btn btn delete-btn"><i class="material-icons">delete</i></button>
                            </td>
                        </tr>
                        <!-- More product rows will go here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>