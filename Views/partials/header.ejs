<header>
    <div class="container header-content">
        <div class="logo">
            <!-- Use a more descriptive title for the link for accessibility -->
            <h1><a href="/" style="text-decoration: none; color: var(--primary-color);" aria-label="Página Inicial - Móveis Rústicos">Móveis Rústicos</a></h1>
        </div>
        <nav class="main-nav" aria-label="Navegação Principal">
            <ul>
                <li class="<%= isActive('/') ? 'active' : '' %>"><a href="/">Início</a></li>
                <li class="<%= isActive('/produtos') ? 'active' : '' %>"><a href="/produtos">Produtos</a></li>
                <li class="<%= isActive('/sobre') ? 'active' : '' %>"><a href="/sobre">Sobre</a></li>
                <li class="<%= isActive('/contato') ? 'active' : '' %>"><a href="/contato">Contato</a></li>
            </ul>
        </nav>
        <div class="header-icons">
            <!-- Add aria-label for icon-only links for accessibility -->
            <a href="#" class="icon-link" aria-label="Pesquisar"><span class="material-icons">search</span></a>
            <% if (session && session.user) { %>
                <a href="/profile" class="icon-link" aria-label="Perfil do Usuário"><span class="material-icons">person</span></a>
                <% if (session.user.role === 'admin') { %>
                    <a href="/admin/dashboard" class="icon-link" aria-label="Painel do Administrador"><span class="material-icons">admin_panel_settings</span></a>
                <% } %>
                <% if (session.user.role === 'staff' || session.user.role === 'admin') { %>
                    <a href="/admin/orders" class="icon-link" aria-label="Gerenciar Pedidos"><span class="material-icons">inventory</span></a>
                <% } %>
                <a href="/logout" class="icon-link" aria-label="Sair"><span class="material-icons">logout</span></a>
            <% } else { %>
                <a href="/login" class="icon-link" aria-label="Login"><span class="material-icons">person</span></a>
            <% } %>
            <a href="/favoritos" class="icon-link" aria-label="Meus Favoritos"><span class="material-icons">favorite_border</span></a>
            <a href="/cart" class="icon-link" aria-label="Meu Carrinho"><span class="material-icons">shopping_cart</span></a>
        </div>
    </div>
</header>